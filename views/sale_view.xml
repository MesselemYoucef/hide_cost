<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="sale_order_view_inherited" model="ir.ui.view">
        <field name="name">customer.sale.view.inherited</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="hide_cost"/>
            </xpath>
        </field>
    </record>
    <record id="customer_sale_hide_cost_view_inherited" model="ir.ui.view">
        <field name="name">customer.sale.hide.cost.view.inherited</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='purchase_price']" position="attributes">
                <attribute name="attrs">{'invisible':[('hide_cost', '=', True)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>

